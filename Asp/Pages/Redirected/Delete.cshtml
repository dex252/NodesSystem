@page "{groupId:int?}/{nodeId:int?}"
@model Asp.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление узла</h1>

@if (Model.Message != null)
{
    <div class="alert alert-danger">@Model.Message</div>
}
<div>@Html.LabelFor(e => e.node.Unit.type): @Model.node.Unit.type</div>
<div>@Html.LabelFor(e => e.node.Unit.name): @Model.node.Unit.name</div>
<div>@Html.LabelFor(e => e.node.Unit.position): @Model.node.Unit.position</div>
<div>@Html.LabelFor(e => e.node.Unit.fullname): @Model.node.Unit.fullname</div>
<div>@Html.LabelFor(e => e.node.Unit.date_create): @Model.node.Unit.date_create</div>
<div>@Html.LabelFor(e => e.node.Unit.dependence): @Model.node.Unit.dependence</div>
<div>@Html.LabelFor(e => e.node.Unit.curatorial_position): @Model.node.Unit.curatorial_position</div>
<div>@Html.LabelFor(e => e.node.Unit.curatorial_fullname): @Model.node.Unit.curatorial_fullname</div>
<form method="post">
    <input type="hidden" asp-for="node.nodeId" />
    <input type="hidden" asp-for="node.groupId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-page="../Main" class="btn btn-dark"
   asp-route-groupId="@Model.node.groupId">Return to tree</a>