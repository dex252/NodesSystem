@page
@model Asp.AddTreeModel
@{
    ViewData["Title"] = "AddTree";
}

<h1>Добавление нового дерева</h1>
@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}
<form method="post">
    <input type="hidden" asp-for="node.parentId" />
    <input type="hidden" asp-for="node.groupId" />
    <input type="hidden" asp-for="group.date" />
    <div class="form-group">
        <label asp-for="group.name"></label>
        <input asp-for="group.name" class="form-control" />
        <span class="text-danger" asp-validation-for="group.name"></span>
    </div>
    <div class="form-group">
        <label asp-for="node.Unit.name"></label>
        <input asp-for="node.Unit.name" class="form-control" />
        <span class="text-danger" asp-validation-for="node.Unit.name"></span>
    </div>
    <div class="form-group">
        <label asp-for="node.Unit.fullname"></label>
        <input asp-for="node.Unit.fullname" class="form-control" />
        <span class="text-danger" asp-validation-for="node.Unit.fullname"></span>
    </div>
    <div class="form-group">
        <label asp-for="node.Unit.position"></label>
        <input asp-for="node.Unit.position" class="form-control" />
        <span class="text-danger" asp-validation-for="node.Unit.position"></span>
    </div>
    <div class="form-group">
        <label asp-for="node.Unit.type"></label>
        <select class="form-control"
                asp-for="node.Unit.type"
                asp-items=@((List<SelectListItem>) ViewData["Types"])>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="node.Unit.date_create"></label>
        <input asp-for="node.Unit.date_create" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Create new tree</button>
</form>
<a asp-page="../Index" class="btn btn-dark">Return</a>
