@page
@model AspNet.IndexModel
@{
    ViewData["Title"] = "Nodes";
}

<h1>Nodes</h1>

<form method="get">
    @if (@Model.node != null)
    {
        <div class="partial">
            <div class="partial-text-id">@Model.node.Unit.name</div>
            <div class="partial-text-id">@Model.node.Unit.fullname</div>
            <a class="btn btn-info btn-additional-style"
               asp-page="./Redirected/Detail"
               asp-route-nodeId="@Model.node.nodeId">
                <i class="btn-text">Detail</i>
            </a>
            <a class="btn btn-success btn-additional-style"
               asp-page="./Redirected/Add"
               asp-route-parentId="@Model.node.nodeId">
                <i class="btn-text">Add</i>
            </a>
            <a class="btn btn-warning btn-additional-style"
               asp-page="./Redirected/Detail"
               asp-route-nodeId="@Model.node.nodeId">
                <i class="btn-text">Edit</i>
            </a>
            @*<a class="btn btn-danger btn-additional-style"
                   asp-page="./Redirected/Detail"
                   asp-route-nodeId="@Model.node.nodeId">
                    <i class="btn-text">Delete</i>
                </a>*@
            @await Html.PartialAsync(@"~/Pages/_Partial.cshtml", Model.node)
        </div>
    }
</form>